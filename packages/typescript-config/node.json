{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "tsBuildInfoFile": "${configDir}/node_modules/.tmp/tsconfig.node.tsbuildinfo"
  },
  "exclude": [
    "${configDir}/apps",
    "${configDir}/packages",
    "${configDir}/playground",
    "${configDir}/src",
    "${configDir}/.*cache*",
    "${configDir}/.astro*",
    "${configDir}/.content-collections*",
    "${configDir}/.contentlayer*",
    "${configDir}/.git*",
    "${configDir}/.github*",
    "${configDir}/.husky*",
    "${configDir}/.next*",
    "${configDir}/.nuxt*",
    "${configDir}/.svelte*",
    "${configDir}/.turbo*",
    "${configDir}/.vercel*",
    "${configDir}/.vite*",
    "${configDir}/.vscode-*",
    "${configDir}/.vscode*",
    "${configDir}/*-dist",
    "${configDir}/build",
    "${configDir}/dist-*",
    "${configDir}/dist",
    "${configDir}/node_modules",
    "${configDir}/out",
    "${configDir}/storybook-static"
  ],
  "include": [
    "${configDir}/.*",
    "${configDir}/.*/**/*",
    "${configDir}/.storybook/**/*",
    "${configDir}/**/*"
  ]
}
