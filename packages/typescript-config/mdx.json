{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@mdx-js/typescript-plugin"
      }
    ],
    "tsBuildInfoFile": "${configDir}/node_modules/.tmp/tsconfig.mdx.tsbuildinfo"
  },
  "include": ["${configDir}/**/*.mdx"],
  "mdx": {
    "checkMdx": true,
    "plugins": [["remark-frontmatter", ["toml", "yaml"]], "remark-gfm"]
  }
}
