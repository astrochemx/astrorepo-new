{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "jsxImportSource": "vue",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.AsyncIterable"],
    "tsBuildInfoFile": "${configDir}/node_modules/.tmp/tsconfig.vue.tsbuildinfo"
  },
  "exclude": ["${configDir}/dist", "${configDir}/dist-*", "${configDir}/node_modules", "${configDir}/out", "${configDir}/storybook-static"],
  "include": ["${configDir}/.storybook/**/*", "${configDir}/**/*", "${configDir}/env.d.ts"],
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"]
  }
}
