{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.AsyncIterable"],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "tsBuildInfoFile": "${configDir}/node_modules/.tmp/tsconfig.astro.tsbuildinfo"
  },
  "exclude": [
    "${configDir}/*-dist",
    "${configDir}/dist-*",
    "${configDir}/dist",
    "${configDir}/node_modules",
    "${configDir}/out",
    "${configDir}/storybook-static"
  ],
  "include": ["${configDir}/.astro/types.d.ts", "${configDir}/.storybook/**/*", "${configDir}/**/*"]
}
