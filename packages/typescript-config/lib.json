{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationDir": "${configDir}/dist/types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "isolatedDeclarations": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "tsBuildInfoFile": "${configDir}/node_modules/.tmp/tsconfig.lib.tsbuildinfo"
  },
  "exclude": ["${configDir}/dist", "${configDir}/dist-*", "${configDir}/node_modules", "${configDir}/out", "${configDir}/storybook-static"],
  "include": ["${configDir}/.storybook/**/*", "${configDir}/**/*"]
}
